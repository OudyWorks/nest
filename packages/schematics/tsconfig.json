{
    "compilerOptions": {
      "baseUrl": "tsconfig",
      "lib": [
        "es2018",
        "dom"
      ],
      "noFallthroughCasesInSwitch": true,
      "declaration": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "noEmitOnError": true,
      "rootDir": "src/",
      "skipDefaultLibCheck": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "target": "es6",
      "types": [
        "jasmine",
        "node"
      ]
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "node_modules/**/*.ts",
      "src/**/files/**/*"
    ]
  }